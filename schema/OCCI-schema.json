{
	"$schema": "http://json-schema.org/schema#",
	"id": "http://schemas.ogf.org/occi/core#",

	"definitions": {

		"resource": {
			"kind": { "type": "string" },
			"mixins": { "type": "array" },
			"attributes": { "type": "object" },
			"actions": { "type": "array" },
			"id": { "type": "string" },
			"links": { "type": "array" },
			"summary": { "type": "string" },
			"title": { "type": "string" }
		},

		"action_invocation": {
			"action": { "type": "string" },
			"attributes": { "type": "object" }
		},

		"link": {
			"kind": { "type": "string" },
			"mixins": { "type": "array" },
			"attributes": { "type": "object" },
			"actions": { "type": "array" },
			"id": { "type": "string" },
			"source": { "type": "string" },
			"target": { "type": "string" },
			"rel": { "type": "string" },
			"title": { "type": "string" }
		},

		"kind": {
			"term": { "type": "string" },
			"scheme": { "type": "string" },
			"title": { "type": "string" },
			"attributes": { "type": "object" },
			"actions": { "type": "array" },
			"parent": { "type": "array" },
			"location": { "type": "string" }
		},

		"mixin": {
			"term": { "type": "string" },
			"scheme": { "type": "string" },
			"title": { "type": "string" },
			"attributes": { "type": "object" },
			"actions": { "type": "array" },
			"depends": { "type": "array" },
			"applies": { "type": "array" },
			"location": { "type": "string" }
		},

		"action": {
			"term": { "type": "string" },
			"scheme": { "type": "string" },
			"title": { "type": "string" },
			"attributes": { "type": "object" }
		},

		"resource_collection": {
			"resources": { "type": "array" }
		},

		"link_collection": {
			"links": { "type": "array" }
		},

		"kind_collection": {
			"kinds": { "type": "array" }
		},

		"mixin_collection": {
			"mixins": { "type": "array" }
		},

		"action_collection": {
			"actions": { "type": "array" }
		},

		"attribute": {
			"oneOf": [
				{ "type": "number" },
				{ "type": "string" },
				{ "type": "boolean" },
				{
					"type": "object",
					"$ref": "#/definitions/attribute"
				}
			]
		},

		"attribute_description": {
			"mutable": { "type": "boolean" },
			"required": { "type": "boolean" },
			"type": { "type": "string" },
			"default": {
				"oneOf": [
					{ "type": "number" },
					{ "type": "string" },
					{ "type": "boolean" }
				]
			},
			"description": { "type": "string" }
		}

	}

}


