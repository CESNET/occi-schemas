{
	"definitions": {

		"array_of_strings": {
			"type": "array",
			"items": { "type": "string" }
		},

		"resource": {
			"type": "object",
			"required": ["kind", "id"],
			"properties": {
				"kind": { "type": "string" },
				"mixins": { "$ref": "#/definitions/array_of_strings" },
				"attributes": { "type": "object" },
				"actions": { "$ref": "#/definitions/array_of_strings" },
				"id": { "type": "string" },
				"links": { "$ref": "#/definitions/array_of_strings" },
				"summary": { "type": "string" },
				"title": { "type": "string" }
			}
		},

		"action_invocation": {
			"type": "object",
			"required": ["action"],
			"properties": {
				"action": { "type": "string" },
				"attributes": { "type": "object" }
			}
		},

		"link": {
			"type": "object",
			"required": ["kind", "id", "target"],
			"properties": {
				"kind": { "type": "string" },
				"mixins": { "$ref": "#/definitions/array_of_strings" },
				"attributes": { "type": "object" },
				"actions": { "$ref": "#/definitions/array_of_strings" },
				"id": { "type": "string" },
				"source": { "type": "string" },
				"target": { "type": "string" },
				"rel": { "type": "string" },
				"title": { "type": "string" }
			}
		},

		"kind": {
			"type": "object",
			"required": ["term", "scheme"],
			"properties": {
				"term": { "type": "string" },
				"scheme": { "type": "string" },
				"title": { "type": "string" },
				"attributes": { "type": "object" },
				"actions": { "$ref": "#/definitions/array_of_strings" },
				"parent": { "type": "string" },
				"location": { "type": "string" }
			}
		},

		"mixin": {
			"type": "object",
			"required": ["term", "scheme", "location"],
			"properties": {
				"term": { "type": "string" },
				"scheme": { "type": "string" },
				"title": { "type": "string" },
				"attributes": { "type": "object" },
				"actions": { "$ref": "#/definitions/array_of_strings" },
				"depends": { "$ref": "#/definitions/array_of_strings" },
				"applies": { "$ref": "#/definitions/array_of_strings" },
				"location": { "type": "string" }
			}
		},

		"action": {
			"type": "object",
			"required": ["term", "scheme"],
			"properties": {
				"term": { "type": "string" },
				"scheme": { "type": "string" },
				"title": { "type": "string" },
				"attributes": { "type": "object" }
			}
		},

		"resource_collection": {
			"type": "object",
			"properties": {
				"resources": {
					"type": "array",
					"items": {
						"$ref": "#definitions/resource"
					}
				}
			}
		},

		"link_collection": {
			"type": "object",
			"properties": {
				"links": {
					"type": "array",
					"items": {
						"$ref": "#definitions/link"
					}
				}
			}
		},

		"kind_collection": {
			"type": "object",
			"properties": {
				"kinds": {
					"type": "array",
					"items": {
						"$ref": "#definitions/kind"
					}
				}
			}
		},

		"mixin_collection": {
			"type": "object",
			"properties": {
				"mixins": {
					"type": "array",
					"items": {
						"$ref": "#definitions/mixin"
					}
				}
			}
		},

		"action_collection": {
			"type": "object",
			"properties": {
				"actions": {
					"type": "array",
					"items": {
						"$ref": "#definitions/action"
					}
				}
			}
		},

		"attribute": {
			"type": "object",
			"properties": {
				"oneOf": [
					{ "type": "number" },
					{ "type": "string" },
					{ "type": "boolean" },
					{
						"type": "object",
						"properties": { "$ref": "#/definitions/attribute" }
					}	
				]
			}
		},

		"attribute_description": {
			"type": "object",
			"properties": {
				"mutable": { "type": "boolean" },
				"required": { "type": "boolean" },
				"type": { "type": "string" },
				"default": {
					"oneOf": [
						{ "type": "number" },
						{ "type": "string" },
						{ "type": "boolean" }
					]
				},
				"description": { "type": "string" }
			}
		},

		"model": {
			"type": "object",
			"properties": {
				"$ref": "#/definitions/kind_collection",
				"$ref": "#/definitions/mixin_collection",
				"$ref": "#/definitions/action_collection",
				"$ref": "#/definitions/resource_collection",
				"$ref": "#/definitions/link_collection"
			}
		}
	},

	"$ref": "#definitions/model"

}


